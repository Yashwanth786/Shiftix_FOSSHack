<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:background="#68ECFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/img1"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="-160dp"
                android:background="@drawable/img2"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="300dp"
                android:background="@drawable/img3"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/img4"/>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/img5"/>

            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/logo"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Sign Up"
                android:textAlignment="center"
                android:textColor="#1E293B"
                android:textFontWeight="700"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/admin"
                android:layout_width="140dp"
                android:layout_height="41.3dp"
                android:src="@drawable/register_admin1"
                android:layout_marginTop="80dp"
                android:layout_marginStart="56dp"
                android:contentDescription="User Image"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/signup"/>

            <ImageView
                android:id="@+id/docter"
                android:layout_width="140dp"
                android:layout_height="41.3dp"
                android:src="@drawable/register_doctor1"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="56dp"
                android:contentDescription="Doctor Image"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/signup"/>

            <TextView
                android:id="@+id/selecttext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select Admin or Doctor"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="500"
                android:textSize="22sp"
                android:textColor="#000"
                android:layout_marginTop="60dp"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/admin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/fullNameEditText"
                android:layout_width="298dp"
                android:layout_height="45dp"
                android:layout_marginTop="65dp"
                android:hint="Full Name"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="16sp"
                android:textColor="#000"
                android:textColorHint="#475569"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:background="@drawable/edittext_baseline"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/admin"/>

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="298dp"
                android:layout_height="45dp"
                android:layout_marginTop="60dp"
                android:hint="Email"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="16sp"
                android:textColor="#000"
                android:textColorHint="#475569"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:background="@drawable/edittext_baseline"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/fullNameEditText" />

            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="298dp"
                android:layout_height="45dp"
                android:layout_marginTop="60dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="16sp"
                android:textColor="#000"
                android:textColorHint="#475569"
                android:paddingStart="0dp"
                android:paddingEnd="46dp"
                android:background="@drawable/edittext_baseline"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/emailEditText" />

            <ImageView
                android:id="@+id/hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_visibility_off_24"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="64dp"
                android:visibility="gone"
                android:contentDescription="Toggle Password Visibility"
                app:layout_constraintTop_toTopOf="@id/passwordEditText"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/termsAndPrivacyCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/passwordEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="65dp" >

                <CheckBox
                    android:id="@+id/agreeCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="56dp"
                    android:layout_gravity="center_vertical"
                    android:buttonTint="@color/primary_blue" />

                <TextView
                    android:id="@+id/termsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="500"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingStart="8dp"
                    android:text="I agree with Terms and Privacy"
                    android:textColor="#999797"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="298dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/btn_gradient_style1_disabled"
                android:fontFamily="@font/roboto_bold"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textAlignment="center"
                android:textFontWeight="600"
                android:textSize="18sp"
                android:enabled="false"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/termsAndPrivacyCheckBox" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="298dp"
                android:layout_height="17dp"
                android:text="Already have an account?"
                android:fontFamily="@font/poppins_medium"
                android:textFontWeight="500"
                android:textSize="14sp"
                android:textColor="#939090"
                android:textAlignment="center"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="@id/signUpButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/logInButton"
                android:layout_width="298dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_gradient_style3"
                android:fontFamily="@font/roboto_bold"
                android:text="Log In"
                android:textAllCaps="false"
                android:textColor="@color/primary_blue"
                android:textFontWeight="600"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressbar1"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:progressTint="@color/primary_blue"
        android:indeterminateTint="@color/primary_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
